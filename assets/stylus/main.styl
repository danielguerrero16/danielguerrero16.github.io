@import 'foundation.min.css'
html, body
	font-family 'Lato', sans-serif
	height 100%
	width 100%
form
	padding-bottom 2em
input[type=submit]
	border 0
	padding .5em 1em
	font-weight bold
input[type=text]
	border 0
	font-weight bold
	color #000

section
	margin 1.5em 0
	.w_margin
		margin 1em 2em
		
footer
	background #000
	padding 3em
	p
		color white
	img
		width 30px
		float right
		margin-left 5px

#contact
	font-weight bold
	h1
		font-size 40px
		font-weight bold

.map
	width 100%
	height 300px
	background whitesmoke
	margin-bottom 2em

#header
	background #3a3a3a
	margin 0 0

#phrase
	margin 1em 0
	background #1D1E1E
	padding .9em 0
	h3
		font-weight bold
		width 100%
	h5
		font-weight bold
			width 100%

#services
	text-align center
	h1
		width 100%
		font-size 40px
		text-align justify
		font-weight bold
	header
		width 100%
	img
		width 200px
		margin 0 auto
		padding-bottom 2em
	p
		text-align justify
		padding 4em

#squaere
	max-width 62.5rem
	margin 0 auto
	padding 8em 4em
	ul
		margin 0
		padding 0
		list-style none
		overflow hidden
		li
			background #F8B032
			border 5px solid #fff
			height 300px
			list-style none
			margin-bottom -1px
			margin-right -1px
			padding 0 1px 0 0
			position relative
			transition all .3s linear 0s
			-webkit-transition all .2s linear 0s
			-moz-transition all .2s linear 0s
			-o-transition all .2s linear 0s
			width 33.333%
			float left
			text-align center
			cursor pointer
			&:hover
				background rgba(248, 176, 50, 0.36)

#video
	height 300px
	background-image url('../media/bg_video.png')
	background-size 100%

#bg_petter
	background-image url('../media/bg_petter.png')
	background-size auto 100%
	background-repeat no-repeat

#description
	background #000
	max-width 100%
	color white
	.man
		height 500px
		text-align justify
		p
			padding 0 4em
		h2
			font-weight bold
			font-size 40px
			padding 1em 0
	.plus_image
		border-top .5em solid white
		height 300px
		background-image url('../media/plus.png')
		background-size 30px
		background-position center
		background-repeat no-repeat
		cursor pointer
	.crown_image
		border-top .5em solid white
		border-left .5em solid white
		height 300px
		background-image url('../media/corona_full.png')
		background-size 20%
		background-position center
		background-repeat no-repeat
		cursor pointer

.about
	margin 0
	> div.row > div:nth-child(1)
		text-align justify
		padding 0 2em
		h1
			font-size 40px
			font-weight bold
			width 100%
			text-align right
			padding .5em 0
		p
			padding 0 1.5em

.download-link {
  padding 2em 0
  text-align center
  background-image url('../media/corona_small.png')
  background-repeat no-repeat
  background-size 30px
  background-position top
  margin 50px 0
}

.download-link > a {
	font-size 30px
	font-weight bold
	color #F8B032
}

.oribit-container
	height 300px
	width auto

.orbit-bullets
	background transparent
	position absolute
	margin 0 auto
	width 100%
	top 380px

.orbit-bullets button
	border-radius 0
	background #f8b032
.orbit-bullets button <	.is-active
		background #c68c2e

.logo
	background #000
	background-image url('../media/corona_full.png')
	background-position center center
	background-repeat no-repeat
	background-size 50px
	height 88px

.menu > li > a
	color: white
	font-weight bold
	padding 1em 3em

.menu > li > a:hover
	color: whitesmoke

.w_margin 
	background #1D1E1E
	margin 0 1em
	> .row 
		max-width 100%
		> div
			text-align center
			height 300px
			font-size 40px
			font-weight bold
			background #1D1E1E
			border 5px solid white
			color #f8b032
			cursor pointer
			padding-top 120px
